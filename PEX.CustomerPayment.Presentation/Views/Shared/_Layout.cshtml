<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Perú Express</title>

    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Rubik:300,300i,400,400i,500,500i,700,700i,900,900i' type='text/css'>
    @RenderSection("styles", required: false)


    @Html.Content("payyed/vendor/bootstrap/css/bootstrap.min.css")
    @Html.Content("payyed/vendor/font-awesome/css/all.min.css")
    @Html.Content("payyed/vendor/bootstrap-select/css/bootstrap-select.min.css")
    @Html.Content("payyed/vendor/currency-flags/css/currency-flags.min.css")
    @Html.Content("payyed/css/stylesheet.css")
    @Html.Content("plugins/ladda/css/ladda-themeless.min.css")
    @Html.Content("custom-styles.css")
    
</head>
<body>

    <!-- Preloader -->
    <div id="preloader">
        <div data-loader="dual-ring"></div>
    </div>
    <!-- Preloader End -->

    <header id="header">
        <div class="container">
            <div class="header-row">
                <div class="header-column justify-content-start">
                    <!-- Logo
                    ============================= -->
                    <div class="logo"> <a class="d-flex" href="#" title="Inicio"><img src="~/Content/images/Logo-Peruexpress.jpg" height="70px" alt="Perú Express" /></a> </div>
                    <!-- Logo end -->
                    <!-- Collapse Button
                    ============================== -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#header-nav"> <span></span> <span></span> <span></span> </button>
                    <!-- Collapse Button end -->
                    <!-- Primary Navigation
                    ============================== -->
                    <!-- Primary Navigation end -->
                </div>

            </div>
        </div>
    </header>
    <!-- Header End -->


    <div id="main-wrapper">

        <!-- Content
        ============================================= -->
        <div id="content" class="py-4">
            @Html.Alert(TempData)
            @RenderBody()
        </div>
        <!-- Content end -->
    </div>


    @{Html.RenderPartial("_ModalTemplate");}

    <!-- Script -->
    @Html.Content("payyed/vendor/jquery/jquery.min.js")
    @Html.Content("payyed/vendor/bootstrap/js/bootstrap.bundle.min.js")
    @Html.Content("payyed/vendor/bootstrap-select/js/bootstrap-select.min.js")
    @Html.Content("payyed/js/theme.js")
    @Html.Content("plugins/ladda/js/spin.min.js")
    @Html.Content("plugins/ladda/js/ladda.min.js")
    @Html.Content("plugins/ladda/js/ladda.jquery.min.js")
    @Html.Content("/Shared/rebind.js", true)
    @Html.Content("/jquery.validate.js", true)
    @Html.Content("/jquery.validate.unobtrusive.js", true)
    @Html.Content("/jquery.unobtrusive-ajax.js", true)
    @Html.Content("/jquery.mask.js", true)
    @Html.Content("/Shared/global.min.js", true)
    @RenderSection("scripts", required: false)

    <script>
        $(function () {
            $("input").attr("autocomplete", "off");
        })
    </script>

</body>
</html>
